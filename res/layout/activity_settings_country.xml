<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/country_ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/country_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Home Country"
            android:textSize="25dp" />

        <Spinner
            android:id="@+id/country_home_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:dropDownSelector="@array/Country"
            android:entries="@array/Country"
            android:prompt="@array/Country" />

        <TextView
            android:id="@+id/country_wifi_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="WiFi"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RadioGroup
                android:id="@+id/country_wifi_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/country_wifi_on_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="On"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_wifi_off_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_wifi_unaffected_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unaffected"
                    android:textSize="12dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/country_wifi_revert_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert when leaving"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/country_mobile_network_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile network"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RadioGroup
                android:id="@+id/country_mobile_network_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/country_mobile_network_on_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="On"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_mobile_network_off_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_mobile_network_unaffected_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unaffected"
                    android:textSize="12dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/country_mobile_network_revert_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert when leaving"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/country_bluetooth_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RadioGroup
                android:id="@+id/country_bluetooth_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/country_bluetooth_on_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="On"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_bluetooth_off_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_bluetooth_unaffected_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unaffected"
                    android:textSize="12dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/country_bluetooth_revert_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert when leaving"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/country_mute_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mute"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RadioGroup
                android:id="@+id/country_mute_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/country_mute_on_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="On"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_mute_off_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_mute_unaffected_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unaffected"
                    android:textSize="12dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/country_mute_revert_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert when leaving"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/country_vibrator_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibrator"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RadioGroup
                android:id="@+id/country_vibrator_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/country_vibrator_on_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="On"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_vibrator_off_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_vibrator_unaffected_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unaffected"
                    android:textSize="12dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/country_vibrator_revert_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert when leaving"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/country_flightmode_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flightmode"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RadioGroup
                android:id="@+id/country_flightmode_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/country_flightmode_on_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="On"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_flightmode_off_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/country_flightmode_unaffected_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unaffected"
                    android:textSize="12dp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/country_flightmode_revert_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revert when leaving"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/country_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Confirm" />

            <Button
                android:id="@+id/country_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset" />

            <Button
                android:id="@+id/country_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>